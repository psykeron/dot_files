[color]
    ui = true

[user]
    name =  George Mathews
    email = geomatthews@gmail.com

[push]
    default = simple

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    deleted = red
    changed = green
    untracked = cyan

[filter "media"]
    clean = git media clean %f
    smudge = git media smudge %f
    required = true
