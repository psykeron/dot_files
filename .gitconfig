# required setup

[user]
    name =  George Mathews
    email = geomatthews@gmail.com

[url "git@github.com:"]
  insteadOf = https://github.com/

[push]
  autoSetupRemote = true

# look and feel

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    deleted = red
    changed = green
    untracked = cyan

# aliases

[alias]
  fam = !git fetch upstream && git rebase upstream/master
  fas = !git fetch upstream && git rebase upstream/staging
  wip = !git commit -m 'wip'


